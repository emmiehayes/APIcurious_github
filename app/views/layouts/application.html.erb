<!DOCTYPE html>
<html>
  <head>
    <title>APIcuriousGithub</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav class="navbar is-dark" role="navigation" aria-label="main navigation" >
      <div class="navbar-menu">
      <% if current_user %>
        <div class="navbar-end">
          <div class="navbar-item">
            <a class="control"><%= button_to 'Log Out', logout_path, method: :delete, class: "button is-outlined is-medium is-warning" %></a>
          </div>
        </div>
        <% else %>
        <div class="navbar-end">
          <div class="navbar-item">
            <a class="control"><%= button_to 'Sign In with GitHub', '/auth/github', method: :get, class: "button is-outlined is-medium is-warning" %></a>
          </div>
        </div>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
